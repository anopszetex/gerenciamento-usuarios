{
  "compilerOptions": {
    "target": "es2020",      
    "outDir": "dist",                           
    "module": "commonjs", 
    "importHelpers": true,
    "strictNullChecks": true,                               
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                      
    "skipLibCheck": true,
    "paths": {
      "@/*": ["./src/*"],
    },                    
  }, 
}
